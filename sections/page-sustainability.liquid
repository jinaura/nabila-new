        .rcy-sect2 {
    padding-top: 50px;
}

.rcy-sect1 .rcy-row3 .content-col .cont-info .sub-content {
    padding-bottom: 30px;
}

.rcy-sect1 .rcy-s1-wrap {
    border-bottom: none;
    padding-bottom: 0;
}
       .rcy-sect2-wrap {
  padding-bottom:10px;

  }

  .rcy-sect2   .sus-tabs-desktop {
display: none;

    }
  .rcy-sect2   .sus-tabs-mobile {
    padding-top: 30px;
    display: block;
    padding-bottom: 3px;
    border-bottom: solid 1px #e6e3e0;
    border-top: solid 1px #e6e3e0;
    margin-top: 30px;

    }
      .rcy-sect2-tabs-wrap {
        overflow: auto;
    width: 100%;
      }
      
        
        .rcy-sect2-tabs-wrap ul {
    display: flex;
    width: max-content;
}
        .content_div{display: flex; flex-flow: column-reverse;  padding-bottom: 50px;}
      
        .leftDiv, .rightDiv{width:100%; padding:0px;}
        .leftDiv{padding-top:30px;}

    }
</style>

<script>
    $( document ).ready(function() {
        $( ".sustainability-tabs li:first-child .content_link" ).addClass('active');
        $( ".content_link" ).on( "click", function(e) {
            e.preventDefault();
            $( ".content_link" ).removeClass('active');
            $(this).addClass('active');
            $('.content_div').addClass('hideDiv');
            $( '#content_div'+$(this).attr('data-id') ).removeClass('hideDiv');
        });
    });
</script>