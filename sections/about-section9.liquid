{% schema %}
    {
    "name": "Section 9",
    "class": "about-section9",
    "max_blocks": 2,
    "settings": [
    {
      "type": "text",
      "id": "scroll_id",
      "label": "Section ID",
      "info": "Use this field to insert the ID to link with the nav items and enable scroll to this section."
    },
    {
    "type": "text",
    "id": "top_title",
    "label": "Top Title",
    "default": "SENSUAL AND SUSTAINABLE"
    },
    {
    "type": "richtext",
    "id": "top_description",
    "label": "Top Description",
    "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>"
    },
    {
    "type": "text",
    "id": "button_label",
    "label": "Button Label",
    "default": "Recycling and Sustainability Guide"
    },
    {
    "type": "url",
    "id": "button_link",
    "label": "Button link"
    }
    ],
    "blocks": [
    {
    "type": "slide",
    "name": "Block",
    "settings": [
    {
    "type": "image_picker",
    "id": "image",
    "label": "Image"
    },
    {
    "type": "text",
    "id": "video",
    "label": "Video"
    },
    {
    "type": "text",
    "id": "percentage",
    "label": "Percentage",
    "default": "90%"
    },
    {
    "type": "text",
    "id": "title_text",
    "label": "Title",
    "default": "Beauty in being."
    },
    {
    "type": "richtext",
    "id": "description",
    "label": "Description",
    "default": "<p>Beauty in being</p>"
    },
    {
    "type": "text",
    "id": "button_label",
    "label": "Button Label",
    "default": "Shop all products"
    },
    {
    "type": "url",
    "id": "button_link",
    "label": "Button link"
    }
    ]}]

    }
{% endschema %}