{% assign scroll_id = section.settings.scroll_id | downcase %}
{% assign scroll_id = scroll_id | replace: ' ', '-'  %}

<section class="abt-sect9" id="{{ scroll_id }}">

    <div class="container">

        <div class="top_desc">
            <div class="desc">
                <h3>{{ section.settings.top_title }}</h3>
                {{ section.settings.top_description }}
            </div>
            <a href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
        </div>

        <hr class="divider--start" />
      
        <div class="s9-row-wrap-desktop">
        <div class="s9-row-wrap">
          
            {% for block in section.blocks %}

            {% assign image = block.settings.image %}
            {% assign video = block.settings.video %}
            {% assign percentage = block.settings.percentage %}
            {% assign title_text = block.settings.title_text %}
            {% assign description = block.settings.description %}
            {% assign button_label = block.settings.button_label %}
            {% assign button_link = block.settings.button_link %}
            {% assign remainingMod = forloop.index | modulo:2 %}
            {% if remainingMod != 0%}
           
          <div class="s9-col s9-col-left">
            
            <div class="c-wrap">
              <div class="c-media fade-scroll">

                {% if image%}
        {%- include 'lazyload-image' _image: image, original_width: '300' -%}
        {% else %}
        <div class="video-sect1">
        <video
        loop
        muted
        preload="auto"
        width="100%"
        height="100%"
        playsinline="true" webkit-playsinline="true"
        data-setup='{"width": 300, "height": 250}' class="responsive-video">
    <source src="{{ video }}" type='video/mp4' /></video>
   </div>
        {% endif %}
            
              </div>

              <div class="c-content fade-scroll ad2">
                
                    <h2>{{ percentage }}</h2>
                    <h3>{{ title_text }}</h3>
                    <div>{{ description }}</div>
               
               

                <div class="s-link">
                    <a href="{{ button_link }}">{{ button_label }}</a>
                </div>
            </div>
            </div>
          </div>
           {% else %}
           <div class="s9-col s9-col-right">
             <div class="c-wrap">
                <div class="c-content fade-scroll">
                   
                    <h2>{{ percentage }}</h2>
                    <h3>{{ title_text }}</h3>
                    <div>{{ description }}</div>
      
                    <div class="s-link">
                        <a href="{{ button_link }}">{{ button_label }}</a>
                    </div>
  
 
            </div>
             <div class="c-media fade-scroll ad2">
  
                        {% if image%}
                {%- include 'lazyload-image' _image: image, original_width: '300' -%}
                {% else %}
                <div class="video-sect2">
                <video
                loop
                muted
                preload="auto"
                width="100%"
                height="100%"
                playsinline="true" webkit-playsinline="true"
                data-setup='{"width": 300, "height": 250}' class="responsive-video">
            <source src="{{ video }}" type='video/mp4' /></video>
           </div>
                {% endif %}
              </div>
          </div>
          </div>
          {% endif %}
          {% endfor %}
  
         </div>
        </div>

        <div class="s9-row-wrap-mobile">
          <div class="s9-row-mobile ">
         <div class="s9-row-wrap ">
          
            {% for block in section.blocks %}

            {% assign image = block.settings.image %}
            {% assign video = block.settings.video %}
            {% assign percentage = block.settings.percentage %}
            {% assign title_text = block.settings.title_text %}
            {% assign description = block.settings.description %}
            {% assign button_label = block.settings.button_label %}
            {% assign button_link = block.settings.button_link %}
         
          <div class="s9-col s9-col-left">
            
            <div class="c-wrap">
                <div class="c-media">
  
                  {% if image%}
          {%- include 'lazyload-image' _image: image, original_width: '300' -%}
          {% else %}
          <div class="video-sect1">
          <video
          loop
          muted
          preload="auto"
          width="100%"
          height="100%"
          playsinline="true" webkit-playsinline="true"
          data-setup='{"width": 300, "height": 250}' class="responsive-video">
      <source src="{{ video }}" type='video/mp4' /></video>
     </div>
          {% endif %}
              
                </div>
  
                <div class="c-content">
                  
                      <h2>{{ percentage }}</h2>
                      <h3>{{ title_text }}</h3>
                      <div>{{ description }}</div>
                 
                 
  
                  <div class="s-link">
                      <a href="{{ button_link }}">{{ button_label }}</a>
                  </div>
              </div>
              </div>
          </div>
          
         
          {% endfor %}
          
        
  
         </div>
        </div>
  </div>
 
    </div>

</section>

