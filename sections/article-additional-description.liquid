<section>

    {% for block in section.blocks %}

    {% if article.handle == articles[block.settings.article].handle %}
    <div style="float: left;width:50%;">
        <table>
            <tr>
                <td><b>{{ block.settings.left_dropcap_1  }}</b></td>
                <td>{{ block.settings.left_dropcap_description_1  }}</td>
            </tr>
            <tr>
                <td><b>{{ block.settings.left_dropcap_2  }}</b></td>
                <td>{{ block.settings.left_dropcap_description_2  }}</td>
            </tr>
