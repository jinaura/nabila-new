                <td><b>{{ block.settings.left_dropcap_4  }}</b></td>
                <td>{{ block.settings.left_dropcap_description_4  }}</td>
            </tr>
        </table>
    </div>

    <div style="float: right;width:50%;">
        <img src="{{ block.settings.right_image | img_url: '285x620' ,scale:2 }}" fetchpriority="low" loading="lazy">
    </div>

    <div>
        <table>
            <tr>
                <td><b>{{ block.settings.center_dropcap_1  }}</b></td>
                <td>{{ block.settings.center_dropcap_description_1  }}</td>
            </tr>
            <tr>
                <td><b>{{ block.settings.center_dropcap_2  }}</b></td>
                <td>{{ block.settings.center_dropcap_description_2  }}</td>
            </tr>
            <tr>
                <td><b>{{ block.settings.center_dropcap_3  }}</b></td>
                <td>{{ block.settings.center_dropcap_description_3  }}</td>
            </tr>
            <tr>
                <td><b>{{ block.settings.center_dropcap_4  }}</b></td>
                <td>{{ block.settings.center_dropcap_description_4  }}</td>
            </tr>
        </table>
    </div>

    <div style="float: left;width:50%;">
        <img src="{{ block.settings.center_image_1 | img_url: '185x420' }}" fetchpriority="low" loading="lazy">
    </div>

    <div style="float: right;width:50%;">
        <img src="{{ block.settings.center_image_2 | img_url: '285x620' ,scale:2 }}" fetchpriority="low" loading="lazy">
    </div>
    <br clear="all"><br clear="all">
    <div style="font-size: 25px;font-weight: bolder;text-align: center">
        {{ block.settings.bottom_quotes  }}
    </div>

        {% break %}
    {% endif %}
    {% endfor %}
</section>

<style>
    table {
        border-collapse: separate;
        border-spacing: 50px 0;
    }

    td {
        padding: 10px 0;
    }
</style>

