  padding: 0 0 0px 60px;


}
.abt-sect3 .s3-row-2 .s3-col-content {
  
    

  padding: 0 60px 0 0 !important;

}
  }
  @media (max-width:767px){
    .abt-sect3 {
      padding:60px 0 0 0;
    }

    .abt-sect3 .s3-row-wrap {
      padding-right: 0;
      padding-left: 0;
    }

    .abt-sect3 .s3-row {
      margin-right: -1px;
    }


    .abt-sect3 .s3-row .s3-col-img {


      width:100%;
      padding: 0 0 30px 0px;

    }
    .abt-sect3 .s3-row .s3-col-content {


