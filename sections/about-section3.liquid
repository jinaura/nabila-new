    padding-top: 54px;
  }
  }


</style>

{% schema %}
    {
    "name": "Section 3",
    "class": "about-section3",
    "max_blocks": 4,
    "settings": [
  {
    "type": "text",
    "id": "scroll_id",
    "label": "Section ID",
    "info": "Use this field to insert the ID to link with the nav items and enable scroll to this section."
  },
	{
    "type": "color",
    "id": "bg_color",
    "label": "Background Color"
  },
	{
    "type": "text",
    "id": "title",
    "label": "Title"
    }
    ],
    "blocks": [
    {
    "type": "slide",
    "name": "Block",
    "settings": [
    {
    "type": "image_picker",
    "id": "image",
    "label": "Image"
    },
    {
    "type": "text",
    "id": "title_text",
    "label": "Title",
    "default": "Beauty in being."
    },
    {
    "type": "richtext",
    "id": "description",
    "label": "Description",
    "default": "<p>Beauty in being</p>"
    }
]}]

    }
{% endschema %}