<section class="smallLargeImageModule">

    {% for block in section.blocks %}

        {% if article.handle == articles[block.settings.lImage-sImage-article].handle %}


            <div>
                {{block.settings.simage | image_url: width: 2000 | image_tag: height: 800, alt: block.settings.simage.alt, fetchpriority: 'low', loading: 'lazy' }}
            </div>

            <div>
              {{block.settings.limage  | image_url: width: 1800 | image_tag: height: 500, alt: block.settings.limage .alt, fetchpriority: 'low', loading: 'lazy' }}
            </div>

            {% break %}
        {% endif %}
    {% endfor %}
</section>

<style>
.smallLargeImageModule{
  display: flex;
  padding-bottom:120px;
}
.smallLargeImageModule > div{
  width:50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.smallLargeImageModule > div img{
  max-width:100%;
  display:block;
}
</style>


{% schema %}
    {
    "name": "2X LImage|SImage",
    "class": "lImage-sImage",
    "blocks" : [
    {
    "type": "slide",
    "name": "2X LImage|SImage",
    "settings": [
    {
    "type": "article",
    "id": "lImage-sImage-article",
    "label": "Article"
    },
    {
    "type": "image_picker",
    "id": "simage",
    "label": "Large Image"
    },
    {
    "type": "image_picker",
    "id": "limage",
    "label": "Small Image"
    }
    ]
    }
    ]
    }
{% endschema %}