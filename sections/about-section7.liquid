{% assign scroll_id = section.settings.scroll_id | downcase %}
{% assign scroll_id = scroll_id | replace: ' ', '-'  %}

<section class="abt-sect7" id="{{ scroll_id }}">

  <div class="container">

    <div class="top_desc">
      <div class="desc">
        <h3>{{ section.settings.top_title }}</h3>
        {{ section.settings.top_description }}
      </div>
      <a href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
    </div>

    <hr class="divider--start" />

    <div class="s7-row-wrap-desktop">
      <div class="s7-row-wrap">


        <div class="s7-col s7-col-left">

          <div class="c-wrap">
            <div class="c-content fade-scroll">
              <div>
                {{ section.settings.descripton }}
              </div>

              <div class="s-link">
                <a href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
              </div>
            </div>

            <div class="c-media fade-scroll">
              {% if section.settings.image1 %}
                {%- include 'lazyload-image' _image: section.settings.image1, original_width: '300' -%}
              {% elsif section.settings.video_url1.type == 'youtube' %}
              <div class="video-sect1 iframe-video-sect1">
                <iframe class="responsive-iframe" width="560" height="315"
                  src="https://www.youtube.com/embed/{{section.settings.video_url1.id}}?playlist={{section.settings.video_url1.id}}&loop=1&autoplay=1&mute=1"
                  fetchpriority="low"
                  loading="lazy"
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen></iframe>
              </div>

              {% elsif section.settings.video_url1.type == 'vimeo' %}
              <div class="video-sect1 iframe-video-sect1">
                <iframe class="responsive-iframe" width="560" height="315"
                  src="https://player.vimeo.com/video/{{section.settings.video_url1.id}}" frameborder="0"
                  fetchpriority="low"
                  loading="lazy"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen></iframe>
              </div>
              {% elsif section.settings.custom_video_url1 %}
              <div class="video-sect1">
                <video loop muted preload="auto" width="100%" height="100%" playsinline="true" webkit-playsinline="true"
                  data-setup='{"width": 300, "height": 250}' class="responsive-video">
                  <source src="{{ section.settings.custom_video_url1 }}" type='video/mp4' />
                </video>
              </div>
              {% endif %}
            </div>
          </div>
        </div>

        <div class="s7-col s7-col-right">
          <div class="c-wrap">


            <div class="c-media fade-scroll ">

              {% if section.settings.image2 %}
              {%- include 'lazyload-image' _image: section.settings.image2, original_width: '200' -%}
              {% elsif section.settings.video_url2.type == 'youtube' %}
              <div class="video-sect2 iframe-video-sect2">
                <iframe class="responsive-iframe" width="560" height="315"
                  src="https://www.youtube.com/embed/{{section.settings.video_url2.id}}?playlist={{section.settings.video_url2.id}}&loop=1&autoplay=1&mute=1"
                  frameborder="0"
                  fetchpriority="low"
                  loading="lazy"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen></iframe>
              </div>

              {% elsif section.settings.video_url2.type == 'vimeo' %}
              <div class="video-sect2 iframe-video-sect2">
                <iframe class="responsive-iframe" width="560" height="315"
                  src="https://player.vimeo.com/video/{{section.settings.video_url2.id}}" frameborder="0"
                  fetchpriority="low"
                  loading="lazy"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen></iframe>
              </div>
              {% elsif section.settings.custom_video_url2 %}

              <div class="video-sect2">
                <video loop muted preload="auto" width="100%" height="100%" playsinline="true" webkit-playsinline="true"
                  data-setup='{"width": 300, "height": 250}' class="responsive-video">
                  <source src="{{ section.settings.custom_video_url2 }}" type='video/mp4' />
                </video>
              </div>
              {% endif %}
            </div>
            <div class="c-content fade-scroll ad2">
              <h2>
                {{ section.settings.title_text }}
              </h2>

              <h4>{{ section.settings.surname }}</h4>

            </div>
          </div>

        </div>



      </div>
    </div>
    <div class="s7-row-wrap-mobile">
      <div class="s7-row-mobile ">
        <div class="s7-row-wrap ">


          <div class="s7-col s7-col-left">

            <div class="c-wrap">
              <div class="c-media">
                {% if section.settings.image1 %}
                {%- include 'lazyload-image' _image: section.settings.image1, original_width: '167' -%}
                {% elsif section.settings.video_url1.type == 'youtube' %}
                <div class="video-sect1 iframe-video-sect1">
                  <iframe class="responsive-iframe" width="560" height="315"
                    src="https://www.youtube.com/embed/{{section.settings.video_url1.id}}?playlist={{section.settings.video_url1.id}}&loop=1&autoplay=1&mute=1"
