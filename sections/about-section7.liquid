{% schema %}
{
"name": "Section 7",
"class": "about-section7",
"settings": [
{
  "type": "text",
  "id": "scroll_id",
  "label": "Section ID",
  "info": "Use this field to insert the ID to link with the nav items and enable scroll to this section."
},
{
"type": "text",
"id": "top_title",
"label": "Top Title",
"default": "CLEAN AND CLINICALLY PROVEN"
},
{
"type": "richtext",
"id": "top_description",
"label": "Top Description",
"default": "<p>Brand Pillars</p>"
},
{
"type": "text",
"id": "title_text",
"label": "Title"
},
{
"type": "text",
"id": "surname",
"label": "Surname"
},
{
"type": "richtext",
"id": "descripton",
"label": "Description",
"default": "<p>Description</p>"
},
{
"type": "image_picker",
"id": "image1",
"label": "Image Left"
},
{
"id": "video_url1",
"type": "video_url",
"label": "Video URL Left",
"accept": ["youtube", "vimeo"]
},
{
"type": "text",
"id": "custom_video_url1",
"label": "Custom Video Url Left"
},
{
"type": "image_picker",
"id": "image2",
"label": "Image Right"
},
{
"id": "video_url2",
"type": "video_url",
"label": "Video URL Right",
"accept": ["youtube", "vimeo"]
},
{
"type": "text",
"id": "custom_video_url2",
"label": "Custom Video Url Right"
},
{
"type": "text",
"id": "button_label",
"label": "Button Label",
"default": "Shop all products"
},
{
"type": "url",
"id": "button_link",
"label": "Button link"
}
]
}
{% endschema %}