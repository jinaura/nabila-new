{% assign _section = section.settings %}

<section class="ma-hero" style="background-color: {{_section.bg_color}};">
  <h1>{{_section.title}}</h1>
  <p class="ma-hero__description">{{_section.description}}</p>
  <button class="btn chat-now">{{_section.cta_text}}</button>
</section>

<style>
  .ma-hero {
    padding: 112px 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .ma-hero h1 {
    font-family: var(--font-heading);
    font-size: 46px;
    font-weight: 300;
    line-height: 60px;
    text-transform: uppercase;
  }
  .ma-hero__description {
    font-size: 22px;
    letter-spacing: 0.94px;
    line-height: 28px;
    padding-top: 25px;
    margin-bottom: 2rem;
    text-align: center;
    max-width: 420px;
  }
  .ma-hero button {
    max-width: 250px;
  }
  @media (max-width: 767px) {
    .ma-hero {
      padding: 85px 40px 70px;
    }
    .ma-hero h1 {
      font-size: 32px;
      line-height: 40px;
    }
    .ma-hero__description {
      font-size: 18px;
      letter-spacing: 0.77px;
      line-height: 23px;
    }
  }
</style>

{% schema %}
  {
    "name": "Makeup Artists Hero",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Makeup Artists"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#f7f3f0"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description",
        "default": "Connect with a live one-on-one consultation with a Makeup Artist."
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text",
        "default": "Chat now"
      }
    ]
  }
{% endschema %}
